{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@core/*": ["src/core/*"],
      "@data/*": ["src/data/*"],
      "@domain/*": ["src/domain/*"],
      "@features/*": ["src/features/*"],
      "@ui/*": ["src/ui/*"],
      "@navigation/*": ["src/navigation/*"],
      "@assets/*": ["src/assets/*"],
      "@types/*": ["src/@types/*"]
    }
  },
  "include": ["src", "index.ts"]
}
